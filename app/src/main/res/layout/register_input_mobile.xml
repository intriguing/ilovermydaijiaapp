<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical" android:background="@drawable/background" android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout android:background="@drawable/top_nav_bg" android:layout_width="fill_parent" android:layout_height="@dimen/TitleHeight">
        <RelativeLayout android:id="@id/back_btn" android:background="@drawable/nav_bg" android:clickable="true" android:layout_width="50.0dip" android:layout_height="fill_parent">
            <ImageView android:layout_width="25.0dip" android:layout_height="25.0dip" android:src="@drawable/ic_back" android:layout_centerInParent="true" />
        </RelativeLayout>
        <TextView android:textSize="@dimen/TitleTextSize" android:textColor="@android:color/white" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="注册" android:layout_centerInParent="true" />
    </RelativeLayout>
    <LinearLayout android:orientation="vertical" android:paddingLeft="20.0dip" android:paddingRight="20.0dip" android:layout_width="fill_parent" android:layout_height="wrap_content">
        <TextView android:textSize="10.0dip" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="10.0dip" android:text="请输入你的用户信息。" />
        <EditText android:id="@id/user_etd" android:background="@drawable/edit_box" android:paddingLeft="10.0dip" android:paddingRight="10.0dip" android:layout_width="fill_parent" android:layout_height="40.0dip" android:layout_marginTop="10.0dip" android:hint="用户名" android:maxLength="11" android:singleLine="true"/>

        <EditText android:id="@+id/pass_et" android:background="@drawable/edit_box"    android:inputType="textPassword" android:paddingLeft="10.0dip" android:paddingRight="10.0dip" android:layout_width="fill_parent" android:layout_height="40.0dip" android:layout_marginTop="10.0dip" android:hint="密码" android:maxLength="11" android:singleLine="true"/>
        <!--<EditText android:id="@id/sex_et" android:background="@drawable/edit_box" android:paddingLeft="10.0dip" android:paddingRight="10.0dip" android:layout_width="fill_parent" android:layout_height="40.0dip" android:layout_marginTop="10.0dip" android:hint="性别" android:maxLength="11" android:singleLine="true"/>-->
        <RadioGroup
            android:id="@+id/sex_et"
            android:layout_width="fill_parent"
            android:layout_height="40.0dip"
            android:layout_marginTop="10.0dip"
            android:orientation="horizontal"
            android:background="@drawable/edit_box"
            android:paddingLeft="10.0dip"
            android:paddingRight="10.0dip"
            android:checkedButton="@+id/male"
            android:weightSum="1">
            <RadioButton
                android:id="@+id/male"
                android:text="男"
                android:layout_width="78dp"
                android:layout_height="match_parent"
                android:checked="false"
                android:textColor="#b54d4d"
                android:textColorHighlight="#af2f2f"
                android:textSize="25dp" />
            <RadioButton
               android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/female"
                android:text="女"
                android:checked="false"
                android:textColor="#a11111"
                android:textColorHighlight="#9a1818"
                android:layout_weight="0.13"
                android:textSize="25dp" />
        </RadioGroup>

        <EditText android:id="@id/mobile_et" android:background="@drawable/edit_box" android:paddingLeft="10.0dip" android:paddingRight="10.0dip" android:layout_width="fill_parent" android:layout_height="40.0dip" android:layout_marginTop="10.0dip" android:hint="手机号码" android:maxLength="11" android:numeric="integer" android:singleLine="true"/>

        <EditText android:id="@id/info_et" android:background="@drawable/edit_box" android:paddingLeft="10.0dip" android:paddingRight="10.0dip" android:layout_width="fill_parent" android:layout_height="40.0dip" android:layout_marginTop="10.0dip" android:hint="用户信息" android:maxLength="11" android:singleLine="true" />

        <Button android:textSize="16.0sp" android:textColor="@color/white" android:layout_gravity="right" android:id="@id/next_btn" android:background="@drawable/orange_btn" android:layout_width="200.0dip" android:layout_height="43.0dip" android:layout_marginTop="10.0dip" android:text="注册" />

    </LinearLayout>

